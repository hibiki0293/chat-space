.rightside__comments_user{data: {id: message.id}}
  .rightside__comments_user-name
    = message.user.name
  .rightside__comments_user-date 
    = message.created_at.strftime("%Y/%m/%d %H:%M")  
  .rightside__comments_input
    .rightside__comments_input-text 
      = message.content
    .rightside__comments_input-image  
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?

